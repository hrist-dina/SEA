include ../ui-kit/ui-kit
include ../select/select
include ../icon/icon

mixin online-service-letter
    .online-service(data-tab-content='letter')
        .__inner
            .__title.form-title Заявка на информационное письмо для суда
            form.form.__form
                .__body
                    .__row
                        .__hulf
                            +field('fio', 'ФИО')
                        .__hulf
                            +field('city', 'Город')
                    .__row
                        .__hulf
                            +field('phone', 'Телефон')(class='js-mask-phone')
                        .__hulf
                            +field('email', 'Email')
                    .__row
                        .__full
                            +field-area('post_address', 'Полный почтовый адрес')
                    .__row
                        .__hulf
                            +select([
                                {
                                    value: '1',
                                    text: 'test'
                                },
                                {
                                    value: '2',
                                    text: 'test test'
                                },
                                {
                                    value: '3',
                                    text: 'test test test'
                                }
                            ],'delivery_method', 'Способ доставки информационного письма')
                        .__hulf
                            +field(
                                'date',
                                'Желаемая дата замера',
                                false,
                                'field--date'
                            )(
                                data-validator-require='true'
                                class='js-mask-date'
                            )
                    .__row
                        .__hulf
                            +select([
                                {
                                    value: '1',
                                    text: 'test'
                                },
                                {
                                    value: '2',
                                    text: 'test test'
                                },
                                {
                                    value: '3',
                                    text: 'test test test'
                                }
                            ],'speak', 'Вы выступаете как:')
                        .__hulf
                            +select([
                                {
                                    value: '1',
                                    text: 'test'
                                },
                                {
                                    value: '2',
                                    text: 'test test'
                                },
                                {
                                    value: '3',
                                    text: 'test test test'
                                }
                            ], 'side', 'Вы представляете сторону:')


                .__body
                    .form-subtitle Реквизиты судебного дела
                    .form__row
                        .form__hulf
                            +field('court', 'Суд, в котором рассматривается дело')
                        .form__hulf
                            +field('number_case', 'Номер дела')
                    .form__row
                        .form__full
                            +field('fio_referee', 'ФИО судьи')
                    .form__row
                        .form__full
                            +field-area('plaintiff', 'Полное наименование истца')
                    .form__row
                        .form__full
                            +field-area('defendant', 'Полное наименование ответчика')
                .__body
                    .form__block-title Описание требуемого исследования
                    .__row
                        .__hulf
                            +select([
                                {
                                    value: '1',
                                    text: 'test'
                                },
                                {
                                    value: '2',
                                    text: 'test test'
                                },
                                {
                                    value: '3',
                                    text: 'test test test'
                                }
                            ],'type_expertise', 'Вы экспертизы')
                    .__row
                        .__full
                            +field-area('meterials', 'Перечень материалов и объектов, которые будут представлены на исследование')
                            .__file
                                +field-file('files', 'Прикрепить файл')
                    .form__row
                        .form__full
                            +field-area('questions', 'Вопросы, которые будут поставлены на экспертизу')
                .__footer
                    .__button
                        +button('Отправить', false, 'submit')(class='consultation__button')
                    .__policy.consultation__policy Нажимая на кнопку «Отправить», вы подтверждаете свое согласие на обработку персональных данных
