include ../ui-kit/ui-kit
include ../select/select
include ../icon/icon

mixin online-service-review
    .online-service.active(data-tab-content='review')
        .__inner
            .__title.form-title Заявка на проведение рецензирования
            form.form.__form
                .__body
                    .__row
                        .__hulf
                            +field('fio', 'ФИО')
                        .__hulf
                            +field('city', 'Город')
                    .__row
                        .__hulf
                            +field('phone', 'Телефон')(class='js-mask-phone')
                        .__hulf
                            +field('email', 'Email')
                    .__row
                        .__hulf
                            +select([
                                {
                                    value: '1',
                                    text: 'test'
                                },
                                {
                                    value: '2',
                                    text: 'test test'
                                },
                                {
                                    value: '3',
                                    text: 'test test test'
                                }
                            ],'who', 'Вы выступаете как')
                        .__hulf
                            +select([
                                {
                                    value: '1',
                                    text: 'test'
                                },
                                {
                                    value: '2',
                                    text: 'test test'
                                },
                                {
                                    value: '3',
                                    text: 'test test test'
                                }
                            ],'type', 'Вид рецензируемой экспертизы')
                    .__row
                        .__full
                            +field-area('meterials', 'Перечень материалов и объектов, которые будут представлены на исследование')
                            .__file
                                +field-file('files', 'Прикрепить файл')
                    .__row
                        .__full
                            +field-area('questions', 'Вопросы, которые будут поставлены на экспертизу')

                .__body
                    .form-subtitle Данные для подготовки договора
                    .form__row
                        .form__hulf
                            +field('fio_contract', 'ФИО')
                        .form__hulf
                            +field(
                                'date_birth_contract',
                                'Дата рождения',
                                false,
                                'field--date'
                            )(
                                data-validator-require='true'
                                class='js-mask-date'
                            )
                    .form__row
                        .form__hulf
                            +field('passport_number_contract', 'Номер паспорта')
                        .form__hulf
                            +field('passport_series_contract', 'Серия паспорта')
                    .form__row
                        .form__full
                            +field-area('passport_who_contract', 'Кем и когда выдан паспорт')
                .__footer
                    .__button
                        +button('Отправить', false, 'submit')(class='consultation__button')
                    .__policy.consultation__policy Нажимая на кнопку «Отправить», вы подтверждаете свое согласие на обработку персональных данных
